<resources>

    <declare-styleable name="HeaderView">
        <attr name="hv_profile_username" format="string" />
        <attr name="hv_profile_email" format="string" />
        <attr name="hv_profile_avatar" format="reference" />
        <attr name="hv_profile_background" format="reference" />
        <attr name="hv_background_color" format="color" />
        <attr name="hv_below_toolbar" format="boolean" />
        <attr name="hv_show_gradient" format="boolean" />
        <attr name="hv_show_arrow" format="boolean" />
        <attr name="hv_show_add_button" format="boolean" />
        <attr name="hv_add_icon" format="reference" />
        <attr name="hv_dialog_title" format="string" />
        <attr name="hv_style" format="enum">
            <enum name="normal" value="1" />
            <enum name="compact" value="2" />
        </attr>
        <attr name="hv_theme" format="enum">
            <enum name="light" value="1" />
            <enum name="dark" value="2" />
        </attr>
        <attr name="hv_highlight_color" format="color" />
    </declare-styleable>

</resources>